<Window x:Class="TazUO_Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TazUO_Launcher"
        mc:Ignorable="d"
        Icon="/taz2.png"
        Title="TazUO Launcher" Height="450" Width="800">
    <Canvas>
        <Image Source="/menu.png" Height="40" Width="40" Canvas.Left="740" Canvas.Top="10"/>
        
        <Rectangle 
            RadiusX="20" 
            RadiusY="20"
            Width="200"
            Height="200" Canvas.Left="50" Canvas.Top="50">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/taz2.png"/>
            </Rectangle.Fill>
        </Rectangle>

        <ComboBox Canvas.Left="50" Canvas.Top="275" SelectedIndex="0" MaxWidth="160" Width="160">
            <ComboBoxItem>Profile 1</ComboBoxItem>
            <ComboBoxItem>Profile 2</ComboBoxItem>
            <ComboBoxItem>Profile 3</ComboBoxItem>
        </ComboBox>
        <Image Source="/menu.png" Width="30" Height="30" Canvas.Left="220" Canvas.Top="271"/>

        <Label Canvas.Left="10" Canvas.Bottom="10" Content="{x:Static local:LauncherSettings.LauncherVersion}" Foreground="White"></Label>

    </Canvas>
</Window>
